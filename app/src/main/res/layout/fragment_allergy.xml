<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="allergyViewModel"
            type="com.chibee.allergy.viewmodels.AllergyViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding"
        android:gravity="center"
        tools:context=".AllergyFragment">

        <TextView
            android:id="@+id/allergyDrugName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Headline2"
            android:text="@{allergyViewModel.allergy.drug}"
            tools:text="Amoxicillin" />
        <TextView
            android:id="@+id/allergyReactionValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{allergyViewModel.allergy.reaction}"
            style="@style/TextAppearance.MaterialComponents.Headline4"
            tools:text="Anaphylaxis" />

        <TextView
            android:id="@+id/systemsInvolvedLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/systems" />

        <TextView
            android:id="@+id/systemsInvolvedValues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{allergyViewModel.allergy.system}"
            tools:text="Skin (uticaria)" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_200"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_launcher_foreground" />

        <Button
            android:id="@+id/chartBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/chart"
            android:onClick="@{() -> allergyViewModel.onChart()}"/>


    </LinearLayout>
</layout>